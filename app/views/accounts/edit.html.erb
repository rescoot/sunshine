<div class="max-w-2xl mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">Edit Account</h1>

  <%= form_for(@user, url: account_path, html: { class: "bg-white shadow rounded-lg p-6", multipart: true }) do |f| %>
    <% if @user.errors.any? %>
      <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded">
        <h2 class="text-red-700 text-sm font-medium"><%= pluralize(@user.errors.count, "error") %> prevented your account from being saved:</h2>
        <ul class="mt-2 text-sm text-red-600">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <h2 class="text-lg font-semibold mb-4">Profile Picture</h2>
      <div class="flex items-center space-x-6">
        <div class="flex-shrink-0">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "h-16 w-16 rounded-full object-cover" %>
          <% else %>
            <div class="h-16 w-16 rounded-full bg-gray-500 flex items-center justify-center text-white text-2xl">
              <%= @user.name.first %>
            </div>
          <% end %>
        </div>
        <div>
          <%= f.label :avatar, "Upload Profile Picture", class: "block text-sm font-medium text-gray-700" %>
          <%= f.file_field :avatar, 
              accept: 'image/jpeg,image/png,image/gif',
              class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:rounded-md file:border-0 file:bg-indigo-50 file:py-2 file:px-4 file:text-sm file:font-semibold hover:file:bg-indigo-100" %>
          <p class="mt-1 text-xs text-gray-500">PNG, JPG, GIF up to 5MB</p>
        </div>
        <% if @user.avatar.attached? %>
          <%= f.check_box :remove_avatar, 
              class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= f.label :remove_avatar, "Remove current avatar", 
              class: "ml-2 block text-sm text-gray-900" %>
        <% end %>
      </div>
    </div>

    <div class="mb-4">
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      <p class="mt-1 text-sm text-gray-500">Leave blank if you don't want to change it</p>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-end space-x-4">
      <%= link_to 'Cancel', account_path, class: 'inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50' %>
      <%= f.submit 'Update Account', class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700' %>
    </div>
  <% end %>
</div>