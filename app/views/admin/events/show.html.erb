<div>
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold leading-6 text-gray-900">Event Details</h1>
      <p class="mt-2 text-sm text-gray-700">Detailed view of event from <%= @event.created_at.strftime("%B %d, %Y %H:%M:%S") %>.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to "Back to Events", admin_events_path, class: "block rounded-md bg-white px-3 py-2 text-center text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
    <!-- Event Information -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Event Information</h3>
        <dl class="mt-6 space-y-6 divide-y divide-gray-100">
          <div class="pt-6 sm:flex">
            <dt class="font-medium text-gray-900 sm:w-64 sm:flex-none sm:pr-6">Scooter</dt>
            <dd class="mt-1 flex justify-between gap-x-6 sm:mt-0 sm:flex-auto">
              <div class="text-gray-900">
                <%= link_to @event.scooter.name, admin_scooter_path(@event.scooter), class: "text-indigo-600 hover:text-indigo-900" %>
              </div>
            </dd>
          </div>
          <div class="pt-6 sm:flex">
            <dt class="font-medium text-gray-900 sm:w-64 sm:flex-none sm:pr-6">Type</dt>
            <dd class="mt-1 flex justify-between gap-x-6 sm:mt-0 sm:flex-auto">
              <div class="text-gray-900">
                <span class="inline-flex items-center rounded-md 
                  <%= case @event.event_type
                      when 'connect'    then 'bg-green-50 text-green-700 ring-green-600/20'
                      when 'disconnect' then 'bg-red-50 text-red-700 ring-red-600/20'
                      when 'command'    then 'bg-blue-50 text-blue-700 ring-blue-600/20'
                      else 'bg-gray-50 text-gray-600 ring-gray-500/10'
                      end %> 
                  px-2 py-1 text-xs font-medium ring-1 ring-inset">
                  <%= @event.event_type.titleize %>
                </span>
              </div>
            </dd>
          </div>
          <div class="pt-6 sm:flex">
            <dt class="font-medium text-gray-900 sm:w-64 sm:flex-none sm:pr-6">Time</dt>
            <dd class="mt-1 flex justify-between gap-x-6 sm:mt-0 sm:flex-auto">
              <div class="text-gray-900">
                <time datetime="<%= @event.created_at.iso8601 %>">
                  <%= @event.created_at.strftime("%B %d, %Y %H:%M:%S.%3N %Z") %>
                </time>
              </div>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Event Data -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Event Data</h3>
        <div class="mt-6">
          <pre class="text-sm text-gray-900 bg-gray-50 p-4 rounded-lg overflow-auto max-h-96"><%= JSON.pretty_generate(@event.data) %></pre>
        </div>
      </div>
    </div>
  </div>
</div>