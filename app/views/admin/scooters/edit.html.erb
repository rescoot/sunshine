<div>
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold leading-6 text-gray-900">Edit Scooter</h1>
      <p class="mt-2 text-sm text-gray-700">Edit details for <%= @scooter.name %>.</p>
    </div>
  </div>

  <div class="mt-8">
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= render "form", scooter: @scooter %>
      </div>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="mt-10">
    <div class="rounded-lg bg-white px-6 py-6 border border-red-200">
      <h3 class="text-base font-semibold leading-6 text-red-800">Danger Zone</h3>
      
      <div class="mt-6">
        <div class="flex items-center justify-between">
          <div>
            <h4 class="text-sm font-medium text-gray-900">Delete this scooter</h4>
            <p class="text-sm text-gray-500">Once you delete a scooter, there is no going back. Please be certain.</p>
          </div>
          <%= button_to admin_scooter_path(@scooter), 
              method: :delete,
              class: "btn-primary red",
              data: { 
                turbo_confirm: "Are you sure you want to delete this scooter? This action cannot be undone and will remove all associated data." 
              } do %>
            Delete Scooter
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
