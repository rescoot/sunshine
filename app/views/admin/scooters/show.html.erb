<div>
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold leading-6 text-gray-900">Scooter Details</h1>
      <p class="mt-2 text-sm text-gray-700">Details and management for <%= @scooter.name %></p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none flex gap-2">
      <% if @scooter.is_online? %>
        <%= link_to "Shell", admin_scooter_shell_path(@scooter), class: "btn-primary" %>
      <% end %>
      <%= link_to "Edit", edit_admin_scooter_path(@scooter), class: "btn-secondary" %>
      <%= link_to "Back to List", admin_scooters_path, class: "btn-secondary" %>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
    <!-- Scooter Information -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Scooter Information</h3>
        <dl class="mt-6 space-y-6 divide-y divide-gray-100">
          <div class="pt-6 sm:flex">
            <dt class="font-medium text-gray-900 sm:w-64 sm:flex-none sm:pr-6">Last seen</dt>
            <dd class="mt-1 flex justify-between gap-x-6 sm:mt-0 sm:flex-auto">
              <div class="text-gray-900">
                <%= @scooter.last_seen_at ? time_ago_in_words(@scooter.last_seen_at) + " ago" : "Never" %>
              </div>
            </dd>
          </div>
          <div class="pt-6 sm:flex">
            <dt class="font-medium text-gray-900 sm:w-64 sm:flex-none sm:pr-6">Added on</dt>
            <dd class="mt-1 flex justify-between gap-x-6 sm:mt-0 sm:flex-auto">
              <div class="text-gray-900"><%= @scooter.created_at.strftime("%B %d, %Y") %></div>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- User Assignments -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">User Assignments</h3>
        
        <!-- Add new user assignment -->
        <div class="mt-4">
          <%= form_with(model: [:admin, @scooter, UserScooter.new], class: "space-y-4", local: true) do |f| %>
            <div class="flex gap-3">
              <div class="flex-grow">
                <%= f.collection_select :user_id, @available_users, :id, :name, 
                    { prompt: "Select user..." },
                    class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
              <div>
                <%= f.select :role, 
                    options_for_select([["Owner", "owner"], ["User", "user"]]),
                    {},
                    class: "block w-32 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
              <%= f.submit "Assign", class: "btn-primary" %>
            </div>
          <% end %>
        </div>

        <!-- Current assignments -->
        <div class="mt-6">
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900">User</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Role</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Assigned</th>
                  <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                    <span class="sr-only">Actions</span>
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% @users.each do |user_scooter| %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm">
                      <%= link_to user_scooter.user.name, admin_user_path(user_scooter.user), class: "text-indigo-600 hover:text-indigo-900" %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium 
                        <%= user_scooter.role == 'owner' ? 'bg-green-50 text-green-700 ring-green-600/20' : 'bg-gray-50 text-gray-600 ring-gray-500/10' %> 
                        ring-1 ring-inset">
                        <%= user_scooter.role.titleize %>
                      </span>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= time_ago_in_words(user_scooter.created_at) %> ago
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                      <%= button_to "Remove", admin_scooter_user_scooter_path(@scooter, user_scooter), 
                          method: :delete,
                          class: "text-red-600 hover:text-red-900",
                          data: { turbo_confirm: "Are you sure you want to remove this user?" } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Events -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center justify-between">
          <h3 class="text-base font-semibold leading-6 text-gray-900">Recent Events</h3>
          <%= link_to "View All", admin_scooter_events_path(@scooter), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
        </div>
        
        <div class="mt-6 flow-root">
          <div class="-my-5 divide-y divide-gray-200">
            <% @events.each do |event| %>
              <div class="py-4">
                <div class="flex items-center justify-between">
                  <div class="flex items-center min-w-0">
                    <div class="min-w-0">
                      <p class="text-sm font-medium text-gray-900"><%= event.event_type.titleize %></p>
                      <p class="text-sm text-gray-500"><%= time_ago_in_words(event.created_at) %> ago</p>
                    </div>
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <pre class="text-xs text-gray-500 max-w-xs truncate"><%= event.data.to_json %></pre>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Telemetry -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center justify-between">
          <h3 class="text-base font-semibold leading-6 text-gray-900">Recent Telemetry</h3>
          <%= link_to "View All", admin_scooter_telemetries_path(@scooter), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
        </div>
        
        <div class="mt-6">
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900">Time</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">State</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Speed</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Location</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% @telemetries.first(5).each do |telemetry| %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-900">
                      <%= link_to "#{time_ago_in_words(telemetry.created_at)} ago", admin_telemetry_path(telemetry) %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= telemetry.state&.titleize %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= number_with_precision(telemetry.speed, precision: 1) %> km/h
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <% if telemetry.lat && telemetry.lng %>
                        <%= number_with_precision(telemetry.lat, precision: 6) %>, 
                        <%= number_with_precision(telemetry.lng, precision: 6) %>
                      <% else %>
                        -
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
