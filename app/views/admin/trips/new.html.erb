<div>
  <div class="sm:flex sm:items-center justify-between">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold leading-6 text-gray-900"><%= t('admin.trips.new.title') %></h1>
      <p class="mt-2 text-sm text-gray-700">
        <%= t('admin.trips.new.description') %>
      </p>
    </div>
    <div class="mt-4 sm:mt-0 flex items-center gap-4">
      <%= link_to t('admin.trips.new.back_to_trips'), admin_trips_path, class: "btn-secondary" %>
    </div>
  </div>

  <div class="mt-8">
    <div class="card">
      <div class="card-header">
        <h3 class="text-base font-semibold leading-6 text-gray-900">
          <%= t('admin.trips.new.trip_information') %>
        </h3>
      </div>
      <div class="border-t border-gray-200 p-6">
        <%= form_with(model: [:admin, @trip], class: "space-y-6") do |form| %>
          <% if @trip.errors.any? %>
            <div class="bg-red-50 p-4 rounded-md">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= t('admin.trips.new.errors_prohibited', count: @trip.errors.count) %>
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @trip.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= form.label :user_id, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.collection_select :user_id, User.all, :id, :email, {}, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :scooter_id, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.collection_select :scooter_id, Scooter.all, :id, :name, {}, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :started_at, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.datetime_field :started_at, value: Time.current, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :ended_at, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.datetime_field :ended_at, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
              <p class="mt-1 text-xs text-gray-500"><%= t('admin.trips.new.leave_blank_for_in_progress') %></p>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :start_lat, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :start_lat, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :start_lng, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :start_lng, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :end_lat, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :end_lat, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :end_lng, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :end_lng, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :start_odometer, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :start_odometer, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :end_odometer, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :end_odometer, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :distance, t('admin.trips.new.distance_meters'), class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :distance, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :avg_speed, t('admin.trips.new.average_speed_kmh'), class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :avg_speed, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :start_gps_distance, t('admin.trips.new.start_gps_distance'), class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :start_gps_distance, value: 0, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :end_gps_distance, t('admin.trips.new.end_gps_distance'), class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :end_gps_distance, value: 0, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>
          </div>

          <div class="flex justify-end">
            <%= form.submit t('admin.trips.new.create_trip'), class: "btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
