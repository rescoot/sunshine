<div class="space-y-4">
  <%- if controller_name != 'sessions' %>
    <div class="text-sm text-center">
      <%= t('devise.shared.already_have_account') %>
      <%= link_to t('devise.shared.sign_in'), new_session_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="text-sm text-center">
      <%= t('devise.shared.dont_have_account') %>
      <%= link_to t('devise.shared.sign_up'), new_registration_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="text-sm text-center">
      <%= link_to t('devise.shared.forgot_password'), new_password_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="text-sm text-center">
      <%= link_to t('devise.shared.didnt_receive_confirmation'), new_confirmation_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="text-sm text-center">
      <%= link_to t('devise.shared.didnt_receive_unlock'), new_unlock_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div class="text-sm text-center">
        <%= button_to t('devise.shared.sign_in_with', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end -%>
  <% end -%>
</div>
