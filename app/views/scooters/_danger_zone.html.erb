<div class="mt-10">
  <div class="rounded-lg bg-white px-6 py-6 border border-red-200">
    <h3 class="text-base font-semibold leading-6 text-red-800">Danger Zone</h3>
    
    <div class="mt-6">
      <div class="flex items-center justify-between">
        <div>
          <h4 class="text-sm font-medium text-gray-900">Delete this scooter</h4>
          <p class="text-sm text-gray-500">Once you delete a scooter, there is no going back. Please be certain.</p>
        </div>
        <%= button_to scooter_path(@scooter), 
            method: :delete,
            class: "rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500",
            data: { 
              turbo_confirm: "Are you sure you want to delete this scooter? This action cannot be undone and will remove all associated trips and data." 
            } do %>
          Delete Scooter
        <% end %>
      </div>
    </div>
  </div>
</div>