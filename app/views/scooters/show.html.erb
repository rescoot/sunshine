<%= turbo_stream_from @scooter %>
<div>
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold leading-6 text-gray-900"><%= @scooter.name %></h1>
      <p class="mt-2 text-sm text-gray-700">Scooter details and controls.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none space-x-2">
      <% unless @waiting_for_telemetry %>
        <%= link_to "Generate New Token", 
            show_token_management_scooter_path(@scooter),
            turbo_method: :get,
            class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500",
            data: { turbo_stream: true } %>
      <% end %>
      <%= link_to "Edit", edit_scooter_path(@scooter), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <%= link_to "Back", scooters_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <% if @waiting_for_telemetry && @scooter.api_token %>
    <div class="rounded-md bg-yellow-50 p-4 mt-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm0-2a6 6 0 100-12 6 6 0 000 12zm0-9a1 1 0 011 1v4a1 1 0 11-2 0V8a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Waiting for telemetry data</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p>Your scooter hasn't submitted any telemetry data yet. Please ensure:</p>
            <ul class="mt-2 list-disc pl-5 space-y-1">
              <li>Your configuration file (radio-gaga.yml) is properly set up with the correct VIN and API token</li>
              <li>The telemetry service is running on your scooter</li>
              <li>Your scooter has an active internet connection</li>
            </ul>
            <p class="mt-2">You can download a fresh configuration below if needed.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div id="api_token_section">
    <% if @waiting_for_telemetry || @show_token_section %>
      <%= render "api_token", scooter: @scooter, token: @token %>
    <% end %>
  </div>

  <% if @scooter.online? && !@waiting_for_telemetry %>
    <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-8">
      <%= render partial: "scooters/dbc", locals: { scooter: @scooter } %>
    </div>
  <% end %>

  <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-8">
    <%= render partial: "scooters/visual_status", locals: { scooter: @scooter } %>

    <!-- Battery Status -->
    <div class="card">
      <div class="card-header">
        <h3 class="text-base font-semibold leading-6 text-gray-900">
          Battery Status
        </h3>
      </div>
      <div class="card-body">
        <div class="grid grid-cols-2 gap-4">
          <!-- Main Battery -->
          <div class="flex items-center space-x-4">
            <%= image_tag @scooter.battery_image_path(@scooter.battery0_level), class: "w-12 h-12", alt: "Main Battery" %>
            <div>
              <p class="text-sm font-medium text-gray-500">Main Battery</p>
              <p class="text-lg font-semibold"><%= number_to_percentage(@scooter.battery0_level, precision: 1) %></p>
            </div>
          </div>

          <!-- Secondary Battery -->
          <div class="flex items-center space-x-4">
            <%= image_tag @scooter.battery_image_path(@scooter.battery1_level), class: "w-12 h-12", alt: "Secondary Battery" %>
            <div>
              <p class="text-sm font-medium text-gray-500">Secondary</p>
              <p class="text-lg font-semibold"><%= number_to_percentage(@scooter.battery1_level, precision: 1) %></p>
            </div>
          </div>

          <!-- Aux Battery -->
          <div class="flex items-center space-x-4">
            <%= image_tag "battery/batt_aux.webp", class: "w-12 h-12", alt: "Aux Battery" %>
            <div>
              <p class="text-sm font-medium text-gray-500">Aux Battery</p>
              <p class="text-lg font-semibold"><%= number_to_percentage(@scooter.aux_battery_level, precision: 1) %></p>
            </div>
          </div>

          <!-- CBB Battery -->
          <div class="flex items-center space-x-4">
            <%= image_tag "battery/batt_cbb.webp", class: "w-12 h-12", alt: "CBB Battery" %>
            <div>
              <p class="text-sm font-medium text-gray-500">CBB Battery</p>
              <p class="text-lg font-semibold"><%= number_to_percentage(@scooter.cbb_battery_level, precision: 1) %></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render partial: "command_queue_notice" if @scooter.present? && !@scooter.online? %>

    <!-- Controls -->
    <div class="card lg:col-span-2">
      <div class="card-header">
        <h3 class="text-base font-semibold leading-6 text-gray-900">
          Controls
        </h3>
      </div>
      <div class="card-body">
        <%= render partial: "controls", locals: { scooter: @scooter } %>
      </div>
    </div>

    <!-- Recent Trips -->
    <div class="card lg:col-span-2">
      <div class="card-header flex items-center justify-between">
        <h3 class="text-base font-semibold leading-6 text-gray-900">
          Recent Trips
        </h3>
        <%= link_to "View All", trips_path(scooter_id: @scooter.id), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900">Date</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Duration</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Distance</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% @trips.each do |trip| %>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-900">
                  <%= link_to trip.started_at.strftime("%B %d, %Y %H:%M"), 
                      trip_path(trip), class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= format_trip_duration(trip) %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= format_trip_distance(trip) %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= trip_status_badge(trip) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
