<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <h1 class="text-2xl font-semibold leading-6 text-gray-900">Trips History</h1>
    <p class="mt-2 text-sm text-gray-700">A list of all your trips with their details.</p>
  </div>
</div>

<div class="mt-8">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div class="mt-4 sm:mt-0">
      <%= form_tag trips_path, method: :get, class: "flex gap-4" do %>
        <div>
          <%= label_tag :start_date, "Start Date", class: "block text-sm font-medium text-gray-700" %>
          <%= date_field_tag :start_date, params[:start_date], class: "mt-1 block rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div>
          <%= label_tag :end_date, "End Date", class: "block text-sm font-medium text-gray-700" %>
          <%= date_field_tag :end_date, params[:end_date], class: "mt-1 block rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div>
          <%= label_tag :scooter_id, "Scooter", class: "block text-sm font-medium text-gray-700" %>
          <%= select_tag :scooter_id, 
              options_from_collection_for_select(current_user.scooters, :id, :name, params[:scooter_id]),
              { prompt: "All Scooters", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
        </div>
        
        <%= submit_tag "Filter", class: "mt-6 btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Date</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Scooter</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Duration</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Distance</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Avg Speed</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @trips.each do |trip| %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                    <%= link_to trip.started_at.strftime("%B %d, %Y %H:%M"), trip_path(trip), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= trip.scooter.name %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= format_trip_duration(trip) %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= format_trip_distance(trip) %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= format_trip_speed(trip) %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <%= trip_status_badge(trip) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <% if @trips.respond_to?(:page) %>
          <div class="mt-4 flex items-center justify-between">
            <%= paginate @trips, class: "pagination" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
