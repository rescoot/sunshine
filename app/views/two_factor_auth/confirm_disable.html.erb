<div class="max-w-3xl mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">Disable Two-Factor Authentication</h1>

  <div class="bg-white shadow rounded-lg p-6">
    <% if flash[:alert] %>
      <div class="mb-4 p-4 bg-red-100 text-red-800 rounded">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="mb-6">
      <p class="text-gray-700 mb-4">
        <strong>Warning:</strong> Disabling two-factor authentication will make your account less secure.
        Please confirm your password to continue.
      </p>

      <%= form_tag two_factor_auth_path, method: :delete do %>
        <div class="mb-4">
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <div class="mt-1">
            <%= password_field_tag :password, nil, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true %>
          </div>
        </div>
        
        <div class="flex items-center justify-between">
          <%= submit_tag "Disable Two-Factor Authentication", class: "inline-flex items-center btn-primary red" %>
          <%= link_to "Cancel", account_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
