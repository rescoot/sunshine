<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Two-Factor Authentication</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <% if flash[:alert] %>
      <div class="mb-4 p-4 bg-red-100 text-red-800 rounded">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <p class="mb-4 text-sm text-gray-600">
      Please enter the verification code from your authenticator app to complete the sign-in process.
    </p>

    <%= form_tag users_otp_verification_path, method: :post, class: "space-y-6" do %>
      <div>
        <label for="otp_attempt" class="block text-sm font-medium leading-6 text-gray-900">Verification Code</label>
        <div class="mt-2">
          <%= text_field_tag :otp_attempt, nil, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Enter 6-digit code", autocomplete: "off", required: true, pattern: "[0-9]{6}", inputmode: "numeric" %>
        </div>
      </div>

      <div class="mb-4">
        <div class="flex items-center">
          <%= check_box_tag :trust_device, "1", false, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
          <label for="trust_device" class="ml-2 block text-sm text-gray-900">Trust this device for 30 days</label>
        </div>
      </div>

      <div>
        <%= submit_tag "Verify", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>

    <div class="mt-6">
      <p class="text-sm text-gray-600 mb-2">
        Lost your phone or can't access your authenticator app?
      </p>
      <p class="text-sm text-gray-600">
        You can use one of your recovery codes as a backup.
      </p>
    </div>
  </div>
</div>
